<h1>Add a new product</h1>
<%= form_tag '/products/create', method: :post do %>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved to the database:</h2>
   
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title, @product.title %>
  </div>    
  <div class="form-group">
    <%= label_tag :color %>
    <%= text_field_tag :color, @product.color %>
  </div>    
  <div class="form-group">
    <%= label_tag :material %>
    <%= text_field_tag :material, @product.material %>
  </div>  
  <div class="form-group">
    <%= label_tag :where_made %>
    <%= text_field_tag :where_made, @product.where_made %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>
   <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>
    <div class="form-group">
    <%= label_tag :supplier %>
    <%= collection_select :supplier, :supplier_id, @suppliers, :id, :name %>
    </div> 
  <div class="form-group">
    <%= label_tag :image_url %>
    <%= text_field_tag :image_url %>
  </div>      
  <div class="form-group">
    <%= label_tag :in_stock %>
    <%= text_field_tag :in_stock, @product.in_stock %>
  </div> 
  <div>
    <%= submit_tag "Add Product", class: "btn btn-default" %>
  </div>
<% end %>