<h1>Add a new supplier</h1>
<%= form_tag '/suppliers/create', method: :post do %>

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>    
  <div class="form-group">
    <%= label_tag :phone %>
    <%= text_field_tag :phone %>
  </div>  
  <div>
    <%= submit_tag "Add Supplier", class: "btn btn-default" %>
  </div>
<% end %>